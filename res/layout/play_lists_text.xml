<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">


		<ImageView android:id="@+id/play_lists_image"
			android:layout_width="50dip" android:layout_height="60dip"

			android:layout_marginLeft="7dip" android:layout_marginTop="3dip"
			android:layout_marginBottom="3dip" android:singleLine="true"
			android:ellipsize="marquee" android:src="@drawable/software_icons"
			android:marqueeRepeatLimit="marquee_forever" android:layout_weight="1" />



		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<TextView android:id="@+id/play_lists_text"
				android:layout_width="350dip" android:layout_height="30dip"
				android:textSize="20dip" android:layout_marginLeft="20dip"
				android:layout_marginTop="4dip" android:layout_marginBottom="2dip"
				android:singleLine="true" android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever" android:layout_weight="1" />

			<TextView android:id="@+id/play_lists_big"
				android:layout_width="wrap_content" android:layout_height="24dip"
				android:textSize="13dip" android:layout_marginLeft="20dip"
				android:layout_marginTop="3dip" android:layout_marginBottom="0dip"
				android:singleLine="true" android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever" android:layout_weight="1" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>